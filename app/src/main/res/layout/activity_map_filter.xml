<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.cs2340.ratlab.controllers.MapFilterActivity">

    <TextView
        android:id="@+id/startDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date:"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date:"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="26dp"
        android:layout_marginTop="159dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/boroughView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borough:"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/bronxBox"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="18dp"
        app:layout_constraintLeft_toLeftOf="@+id/bronxBox"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/endDatePicker" />

    <CheckBox
        android:id="@+id/bronxBox"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="Bronx"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginEnd="1dp"
        app:layout_constraintRight_toRightOf="@+id/queensBox"
        android:layout_marginTop="114dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/brooklynBox"
        app:layout_constraintTop_toTopOf="@+id/endDateView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.901"
        app:layout_constraintBottom_toTopOf="@+id/brooklynBox" />

    <CheckBox
        android:id="@+id/brooklynBox"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Brooklyn"
        app:layout_constraintRight_toLeftOf="@+id/mapFilterButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.673" />

    <CheckBox
        android:id="@+id/queensBox"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:text="Queens"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintRight_toRightOf="@+id/brooklynBox"
        android:layout_marginTop="59dp"
        app:layout_constraintTop_toBottomOf="@+id/bronxBox"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/brooklynBox"
        app:layout_constraintHorizontal_bias="0.0" />

    <CheckBox
        android:id="@+id/manhattanBox"
        android:layout_width="127dp"
        android:layout_height="33dp"
        android:text="Manhattan"
        app:layout_constraintLeft_toRightOf="@+id/brooklynBox"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/statenIslandBox" />

    <CheckBox
        android:id="@+id/statenIslandBox"
        android:layout_width="125dp"
        android:layout_height="32dp"
        android:text="Staten Island"
        android:layout_marginStart="26dp"
        app:layout_constraintLeft_toRightOf="@+id/bronxBox"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="41dp"
        app:layout_constraintTop_toBottomOf="@+id/endDatePicker" />

    <Button
        android:id="@+id/mapFilterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:onClick="onClickFilter"
        android:text="Filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <DatePicker
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/startDatePicker"
        android:layout_width="246dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="18dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintTop_toBottomOf="@+id/startDateView" />

    <DatePicker
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:id="@+id/endDatePicker"
        android:layout_width="246dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/startDatePicker" />
</android.support.constraint.ConstraintLayout>
